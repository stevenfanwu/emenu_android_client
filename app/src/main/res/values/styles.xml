<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget" parent="android:Widget"></style>

    <style name="Widget.AbsListView" parent="android:Widget.AbsListView">
        <item name="android:fadingEdgeLength">0dp</item>
    </style>

    <style name="Widget.CompoundButton" parent="android:Widget.CompoundButton"></style>

    <style name="Widget.CompoundButton.CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check</item>
    </style>

    <style name="Widget.AsyncImageView">
        <item name="scaleType">centerCrop</item>
    </style>

    <style name="Widget.AsyncImageView.Small">
        <item name="loadingBackground">@drawable/image_missing_small</item>
        <item name="loadFailedDrawable">@drawable/image_missing_small</item>
    </style>

    <style name="Widget.AsyncImageView.Default">
        <item name="loadingBackground">@drawable/image_missing</item>
        <item name="loadFailedDrawable">@drawable/image_missing</item>
    </style>

    <style name="Widget.AsyncImageView.Large">
        <item name="loadingBackground">@drawable/image_missing</item>
        <item name="loadFailedDrawable">@drawable/image_missing</item>
    </style>

    <style name="Widget.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.MenuRadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/menu_radio_indicator</item>
        <item name="android:textColor">@color/text_dard_red</item>
    </style>

    <style name="Widget.EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.ListView" parent="android:Widget.AbsListView">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:footerDividersEnabled">false</item>
    </style>

    <style name="Widget.ProgressBar" parent="android:style/Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_medium</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">81dip</item>
        <item name="android:maxWidth">81dip</item>
        <item name="android:minHeight">81dip</item>
        <item name="android:maxHeight">81dip</item>
    </style>

    <style name="Widget.Spinner" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/btn_spinner</item>
    </style>

    <style name="TextAppearance.Red" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="TextAppearance.Red.Dard">
        <item name="android:textColor">@color/text_dard_red</item>
    </style>

    <style name="Widget.SpinnerItem" parent="@android:style/Widget.Holo.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Animation" />

    <style name="Animation.Activity" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="PepperStyle">
        <item name="starDrawable">@drawable/pepper</item>
        <item name="starInterval">3dp</item>
        <item name="starCount">3</item>
    </style>

</resources>